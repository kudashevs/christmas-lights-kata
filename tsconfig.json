{
  "compileOnSave": true, // currently supported in Visual Studio 2015 with TypeScript 1.8.4 and above, and atom-typescript plugin.
  "compilerOptions": {
    "types": ["node", "jest"],
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "lib": ["es6"],
    "outDir": "lib",
    "alwaysStrict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
